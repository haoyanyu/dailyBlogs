{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "node",
    "lib": ["es2017", "ES2019"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "noEmit": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["koa", "koa-router", "node"],
    "baseUrl": "./",
    "typeRoots": ["../../node_modules/@types", "../../node_modules/@qima-inc"],
    "skipLibCheck": true
  },
  "include": [ "."],
  "exclude": ["**/node_modules"]
}